<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cpq.mybatispulslearn.sysrole.mapper.SysRoleMapper">
    <select id="selectRoleUser" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT * FROM `sys_role` role, sys_user user
         <where>
             <if test="query.roleId != null and query.roleId != ''">
                 role.id=#{query.roleId}
             </if>
             AND role.id=user.role_id;
         </where>
    </select>
</mapper>
